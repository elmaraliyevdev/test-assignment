{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./backend/dist",
    "rootDir": "./backend",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"]
  },
  "include": ["backend/**/*"],
  "exclude": ["node_modules", "backend/dist", "backend/**/*.test.ts"]
}